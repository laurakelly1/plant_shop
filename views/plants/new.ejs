                <!-- description -->
                <label for="description">Description</label>
                <textarea id="description"></textarea>
            </fieldset>
            <input type="submit" value="Create Plant"/>
        </form>
    </main>


    <footer>
        <%- include('../partials/footer.ejs'); %>
    </footer>
</body>

</html>