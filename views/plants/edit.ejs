<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs'); %>
        <title>Planta Nullius | Edit
        </title>
</head>

<body>
    <header>
        <%- include('../partials/header.ejs'); %>
    </header>
    <br />
    <h2 class="edit-heading">Edit Plant
    </h2>
    <div class="edit-main">

        <div class="edit-image">
        </div>
        <div class="edit-data">
            <form class="edit-box" action="/shop/<%= plant._id %>?_method=PUT" method="POST">
                <fieldset class="plant-details">
                    <legend>Plant Details</legend>
                    <!-- name -->
                    <label for="name">Name
                        <input class='edit' type="text" id="name" name='name' value="<%= plant.name %> " />
                    </label>
                    <!-- botantical name -->
                    <label for="botanicalName">Botantical Name
                        <input class='edit' type="text" id="botanicalName" name='botanicalName'
                            value="<%= plant.botanicalName %> " />
                    </label>
                    <!-- description -->
                    <label for="description">Description
                        <textarea id="description" name="description"><%= plant.description %> </textarea>
                    </label>
                    <!-- type -->
                    <label for="type">Type
                        <input class='edit'  type="text" id="type" name="type" value="<%= plant.type.join(" , ")%>"></input>
                    </label>
                    <!-- image address -->
                    <label for="image">Image address
                        <input class='edit' type="text" id="image" name='image' value="<%= plant.image %> " />
                    </label>
                </fieldset>
                <fieldset class="plant-data">
                    <legend>Plant Data</legend>
                    <!-- price -->
                    <label for="price">Price
                        <input class='edit' type="text" id="price" name='price' value="<%= plant.price %> " />
                    </label>
                    <!-- quantity -->
                    <label for="quantity">Quantity
                        <input class='edit' type="text" id="quantity" name='quantity' value="<%= plant.quantity %> " />
                    </label>

                    <!-- bestSeller -->
                    <label for="bestSeller">Best Seller<br />
                        <input class='edit' type="checkbox" class="checked" id="bestSeller" name="bestSeller"
                            <% if(plant.bestSeller===true){ %> checked <% } %> />

                            <span></span>
                    </label>
                </fieldset>


                <input class="edit-button waves-effect waves-light btn-large light-green darken-1" type="submit"
                    value="Update Plant" />
            </form>

        </div>



    </div>


    <footer>
        <%- include('../partials/footer.ejs'); %>
    </footer>
</body>

</html>